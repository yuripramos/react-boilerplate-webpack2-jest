{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "react/jsx-no-bind": 0,
    "arrow-body-style": 0,
    "consistent-return": 0,
    "no-underscore-dangle": 0,
    "linebreak-style": 0,
    "indent": [2, "tab"],
    "react/jsx-indent": [2, "tab"],
    "quotes":0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "max-len": [
      2,
      120,
      2,
      {
        "ignoreUrls": true
      }
    ],
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  }
}
